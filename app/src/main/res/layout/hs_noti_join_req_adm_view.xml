<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:id="@+id/hs_noti_row_container"
    android:background="@drawable/button_light_color"
    android:clickable="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/noti_join_req_admin_view">

        <TextView
            android:paddingTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/noti_join_req_admin_name"
            android:text="Alice "
            style="@style/HS_Noti_Sub_Text_Name" />


        <LinearLayout
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:layout_below="@id/noti_join_req_admin_name"
            android:layout_alignParentLeft="true"
            android:id="@+id/buttons_container">


            <TextView
                android:text="Welcome"
                android:id="@+id/ok"

                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_below="@id/noti_join_req_admin_name"
                android:layout_alignLeft="@id/noti_join_req_admin_name"
                android:paddingLeft="10dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:clickable="true"
                style="@style/HS_Noti_Sub_Button" />

            <TextView
                android:text="Refuse"
                android:id="@+id/refuse"

                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_below="@+id/noti_join_req_admin_text"
                android:paddingRight="10dp"
                android:layout_toEndOf="@+id/ok"
                android:layout_toRightOf="@+id/ok"
                android:layout_alignTop="@+id/ok"
                android:gravity="center"
                android:clickable="true"
                style="@style/HS_Noti_Sub_Button" />
        </LinearLayout>
        <!--<View-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:background="#c0c0c0"-->
        <!--/>-->
    </RelativeLayout>

</TableRow>
