<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ncl.team5.lloydsmockup.Payments"
    android:background="#ffffffff">

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerFrom"
        android:spinnerMode="dropdown"
        android:textAlignment="center"
        android:layout_marginTop="43dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/lloyds_color" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Account Number:"
        android:id="@+id/textView3"
        android:layout_below="@+id/spinnerFrom"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textColor="#ff000000" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:textColor="#ff000000"
        android:id="@+id/amountText"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:background="@drawable/border" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sort Code:"
        android:id="@+id/textView4"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/amountText"
        android:layout_centerHorizontal="true"
        android:textColor="#ff000000" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sortCodeTxt"
        android:textColor="#ff000000"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/amountText"
        android:layout_alignStart="@+id/amountText"
        android:layout_alignRight="@+id/amountText"
        android:layout_alignEnd="@+id/amountText"
        android:background="@drawable/border" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Amount:"
        android:id="@+id/textView5"
        android:layout_below="@+id/sortCodeTxt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:textColor="#ff000000" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/amountPay"
        android:textColor="#ff000000"
        android:background="@drawable/border"
        android:layout_alignRight="@+id/sortCodeTxt"
        android:layout_alignEnd="@+id/sortCodeTxt"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/sortCodeTxt"
        android:layout_alignStart="@+id/sortCodeTxt" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Make Payment"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:onClick="btnMakePay" />

</RelativeLayout>
