<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"


    tools:context="com.ncl.team5.lloydsmockup.Houseshare_HomeView"
    android:id="@+id/hs_hv_layout">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/home_view_main_container"
        android:background="@android:color/background_light">
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:id="@+id/home_view_text_view"
            android:text="@string/hello_blank_fragment" />
    </ScrollView>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/noti_main_container"
        android:background="@drawable/border_noti"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
    </FrameLayout>
</FrameLayout>
