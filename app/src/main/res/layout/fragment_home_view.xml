<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ncl.team5.lloydsmockup.Houseshare_HomeView"
    android:id="@+id/hs_hv_layout"
    android:background="@android:color/background_light">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/home_view_main_container"
        >


        <TextView
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:text="Loading"
            android:id="@+id/viewName"
            android:textColor="@color/text_color"
            android:layout_gravity="left|top"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="25dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:id="@+id/viewAddressText"
            android:layout_gravity="left|top"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="40dp" />

        <TextView
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:id="@+id/viewAddress"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="15dp" />

        <view
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            class="View"
            android:id="@+id/view"
            android:background="#c0c0c0"
            android:layout_marginTop="130dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton"
            android:background="@android:color/transparent"
            android:layout_alignTop="@+id/viewName"
            android:layout_alignRight="@+id/button2"
            android:layout_alignEnd="@+id/button2"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_people"/>

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/listBills"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_below="@+id/view"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true" />

        <ProgressBar
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:layout_alignTop="@+id/viewAddressText"
            android:layout_alignLeft="@id/viewName"
            android:layout_alignStart="@id/viewName"
            android:visibility="visible"
            />
    </RelativeLayout>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/horse2"/>
</LinearLayout>
