<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ncl.team5.lloydsmockup.Transfers"
    android:background="#ffffffff">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff000000"
        android:text="From:"
        android:textSize="14pt"
        android:id="@+id/textView9"
        android:layout_alignTop="@+id/spinnerFrom"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="-10dp"
        android:paddingRight="20dp" />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerFrom"
        android:spinnerMode="dropdown"
        android:textAlignment="center"
        android:clickable="true"
        android:background="@drawable/spinnerimg"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:layout_marginTop="55dp"
        android:layout_toEndOf="@+id/textView9"
        android:layout_toRightOf="@+id/textView9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To:"
        android:textSize="14pt"
        android:textColor="#ff000000"
        android:id="@+id/textView10"
        android:layout_alignTop="@+id/spinnerTo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="-5dp"
        android:paddingRight="20dp" />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerTo"
        android:spinnerMode="dropdown"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/spinnerimg"
        android:layout_below="@+id/spinnerFrom"
        android:layout_toEndOf="@+id/textView10"
        android:layout_alignLeft="@+id/spinnerFrom"
        android:layout_alignStart="@+id/spinnerFrom" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Amount:"
        android:textSize="14pt"
        android:id="@+id/textView2"
        android:layout_marginTop="52dp"
        android:textColor="#ff000000"
        android:layout_below="@+id/spinnerTo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingRight="25dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/amountText"
        android:textColor="#ff000000"
        android:layout_alignBottom="@+id/textView2"
        android:background="@drawable/border"
        android:layout_alignRight="@+id/spinnerTo"
        android:layout_alignEnd="@+id/spinnerTo"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/amountText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make Transfer"
        android:id="@+id/button1"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="41dp"
        android:onClick="btnMakeTrans"
        android:paddingLeft="70dp"
        android:paddingRight="70dp" />

</RelativeLayout>
