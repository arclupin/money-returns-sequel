<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/house_result_container"
    android:background="@drawable/button_light_color">
    <TextView
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/house_result_name"
        android:text="House 1"
        style="@style/HS_Search_Name"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/house_result_address"
        android:text="99 Rothburry Terrace"
        android:paddingLeft="10dp"
        android:textColor="@color/text_color"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/house_result_description"
        android:text="A comp sci house!"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        style="@style/HS_Search_Description"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#c0c0c0"/>
    <TextView android:text="Request Sent"
        android:id="@+id/HS_Search_Result_request_sent"
        style="@style/HS_Search_Request_Sent_Text"
        android:layout_width="wrap_content"
        android:layout_gravity="end"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:layout_marginTop="-20dp"
        android:visibility="invisible"
        android:background="@drawable/button_light_color"/>

</LinearLayout>

</TableRow>
