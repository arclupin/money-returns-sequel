<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/white"
    android:id = "@id/analysis"
    tools:context="com.ncl.team5.lloydsmockup.Analysis">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="350dp"
        android:id="@+id/chart_layout"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"></FrameLayout>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/analysis_spinner"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Groups"
        android:id="@+id/Reset_Button_Analysis"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="btnClickReset"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Error Box"
        android:id="@+id/Analysis_Error_Box"
        android:visibility="invisible"
        android:layout_below="@+id/analysis_spinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="26dp"
        android:textColor="#ff000000" />

</RelativeLayout>
