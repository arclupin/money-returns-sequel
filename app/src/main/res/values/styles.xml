<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/action_bar</item>
        <item name="android:buttonStyle">@style/button_style</item>
        <item name="android:editTextStyle">@style/editText_style</item>
        <item name="android:actionBarTabStyle">@style/tab_style</item>


    </style>

    <style name="action_bar" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@color/lloyds_color</item>


    </style>
    <style name="menuTheme" parent="AppTheme">
        <item name="android:textColor">@color/lloyds_color</item>
    </style>
    <style name="button_style" parent="android:Widget.Holo.Button">
        <item name="android:background">@color/lloyds_color</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>
    <style name="editText_style" parent="android:Widget.Holo.EditText">
    <item name="android:padding">5dp</item>
</style>

    <!--<style name="tab_style" parent="android:Widget.Holo.ActionBar.TabText">-->
        <!--<item name="android:background">@drawable/tab_color</item>-->
    <!--</style>-->

    <style name="tab_style" parent="android:Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/tab_color</item>

    </style>

    <style name="make_payment" parent = "button_style">
        <item name="android:textAppearance">@android:style/TextAppearance.Holo.Medium</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:background">@drawable/button_color</item> <!-- should be the same with the tab having the focus -->

    </style>

    <style name="Sub_Text" parent="android:Widget.TextView">
        <item name="android:textAppearance">@android:style/TextAppearance.Holo.Widget.TextView</item>
        <item name="android:textColor">?android:attr/textColorHighlight</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:ellipsize">marquee</item>

    </style>
    










    <style name="Welcome_HS_Text" parent="android:Widget.TextView">
        <item name="android:textAppearance">@android:style/TextAppearance.Holo.Widget.TextView</item>
        <item name="android:textColor">@color/lloyds_color</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:ellipsize">marquee</item>
        <!--<item name="android:layout_centerInParent">true</item>-->
        <!--<item name="android:layout_centerHorizontal">true</item>-->
        <!--<item name="android:layout_centerVertical">true</item>-->
<item name="android:padding">20dp</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="Welcome_HS_Text_Start" parent="Sub_Text">
        <item name="android:textAppearance">@android:style/TextAppearance.Holo.Widget.TextView</item>
        <item name="android:textColor">@color/lloyds_color</item>
        <item name="android:textStyle">normal</item>
        <item name="android:ellipsize">marquee</item>
        <!--<item name="android:layout_centerInParent">true</item>-->
        <!--<item name="android:layout_centerHorizontal">true</item>-->
        <!--<item name="android:layout_centerVertical">true</item>-->
        <item name="android:gravity">center</item>

    </style>

    <style name="Button_Light" parent="Sub_Text">
        <item name="android:textAppearance">@android:style/TextAppearance.Holo.Widget.TextView</item>
        <item name="android:textStyle">normal</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:textSize">25dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <!--<item name="android:layout_centerInParent">true</item>-->
        <!--<item name="android:layout_centerHorizontal">true</item>-->
        <!--<item name="android:layout_centerVertical">true</item>-->
        <item name="android:gravity">center</item>

    </style>


