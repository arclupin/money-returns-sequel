<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/action_bar</item>
        <item name="android:buttonStyle">@style/button_style</item>
        <item name="android:editTextStyle">@style/editText_style</item>
        <item name="android:actionBarTabStyle">@style/tab_style</item>
        <item name="android:actionBarTabBarStyle">@style/tab_bar_style</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <!-- Base application theme 2. -->
    <style name="AppTheme2" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:actionBarTabStyle">@style/tab_style_null</item>
        <item name="android:actionBarTabBarStyle">@style/tab_bar_style_null</item>

    </style>

    <style name="action_bar" parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:titleTextStyle">@style/action_bar_text</item>
    </style>



    <style name="menuTheme" parent="AppTheme">
        <!--<item name="android:textColor">@color/lloyds_color</item>-->
    </style>
    <style name="button_style" parent="android:Widget.Holo.Button">
        <item name="android:background">@color/lloyds_color</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>
    <style name="editText_style" parent="android:Widget.Holo.Light.EditText">
    <item name="android:padding">5dp</item>

</style>
    <style name="action_bar_text"  parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!--<style name="tab_style" parent="android:Widget.Holo.ActionBar.TabText">-->
        <!--<item name="android:background">@drawable/tab_color</item>-->
    <!--</style>-->

    <style name="tab_style" parent="android:Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_color</item>
    </style>
    <style name="tab_style_null" parent="android:Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/button_light_color</item>
        <!-- the same as the button light color-->

    </style>

    <style name="tab_bar_style_null" parent="android:Widget.Holo.Light.ActionBar.TabBar">
        <item name="android:showDividers">end</item>
        <item name="android:dividerPadding">10dip</item>

    </style>

    <style name="tab_bar_style" parent="android:Widget.Holo.Light.ActionBar.TabBar">

        <item name="android:dividerPadding">10dip</item>
    </style>

    <style name="make_payment" parent = "button_style">
        <item name="android:textAppearance">@android:style/TextAppearance.Holo.Medium</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:background">@drawable/button_color</item> <!-- should be the same with the tab having the focus -->

    </style>

    <style name="Sub_Text" parent="android:Widget.TextView">
        <item name="android:textAppearance">@android:style/TextAppearance.Holo.Widget.TextView</item>
        <item name="android:textColor">?android:attr/textColorHighlight</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="HS_Search_Name" parent="android:Widget.TextView">
        <item name="android:textAppearance">@android:style/TextAppearance.Holo.Widget.TextView</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="HS_Search_Description" parent="android:Widget.TextView">
        <item name="android:textAppearance">@android:style/TextAppearance.Holo.Widget.TextView</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textStyle">italic</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="HS_Search_Request_Sent_Text" parent="android:Widget.TextView">
        <item name="android:textAppearance">@android:style/TextAppearance.Holo.Widget.TextView</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/holo_red_light</item>
        <item name="android:textStyle">italic|bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:ellipsize">marquee</item>
    </style>


    <style name="HS_Noti_Sub_Text" parent="android:Widget.TextView">
        <item name="android:textAppearance">@android:style/TextAppearance.Holo.Widget.TextView</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="HS_Noti_Sub_Text_Name" parent="android:Widget.TextView">
        <item name="android:textAppearance">@android:style/TextAppearance.Holo.Widget.TextView</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="HS_Noti_Sub_Button" parent="android:Widget.TextView">
        <item name="android:textAppearance">@android:style/TextAppearance.Holo.Widget.TextView</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="HS_Search_Empty" parent="android:Widget.TextView">
        <item name="android:textAppearance">@android:style/TextAppearance.Holo.Widget.TextView</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:ellipsize">marquee</item>
    </style>
    










    <style name="Welcome_HS_Text" parent="android:Widget.TextView">
        <item name="android:textAppearance">@android:style/TextAppearance.Holo.Widget.TextView</item>
        <item name="android:textColor">@color/lloyds_color</item>
